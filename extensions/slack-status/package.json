{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "slack-status",
  "title": "Slack Status",
  "description": "Quickly change your Slack status",
  "icon": "slack-icon.png",
  "author": "petr",
  "contributors": [
    "jhjr"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "setStatus",
      "title": "Set Status",
      "subtitle": "Slack",
      "description": "Quickly change your Slack status",
      "mode": "view"
    }
  ],
  "preferences": [
    {
      "name": "accessToken",
      "type": "password",
      "required": true,
      "title": "Access Token",
      "description": "Your Slack access token.",
      "placeholder": "See tinyurl.com/raycast-slack-status"
    }
  ],
  "categories": [
    "Communication",
    "Productivity"
  ],
  "dependencies": {
    "@raycast/api": "^1.58.0",
    "@slack/web-api": "^6.4.0",
    "moment": "^2.29.1"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^1.0.6",
    "@types/node": "^18.8.3",
    "eslint": "^7.32.0",
    "react-devtools": "^4.19.2",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop"
  }
}
